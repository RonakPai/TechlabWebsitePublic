<style>
  .StripeElement {
    border: 1px solid #ccc;
    padding: 12px;
    font-family: cursive !important;
    transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s;
  }

  .StripeElement--focus {
    border-color: #655e7a;
  }

  input[type='radio'] {
    margin: 8px;
  }
  .load-bar {
    position: relative;
    margin-top: 20px;
    width: 100%;
    height: 6px;
    background-color: #fdba2c;
  }
  .bar {
    content: '';
    display: inline;
    position: absolute;
    width: 0;
    height: 100%;
    left: 50%;
    text-align: center;
  }
  .bar:nth-child(1) {
    background-color: #da4733;
    animation: loading 3s linear infinite;
  }
  .bar:nth-child(2) {
    background-color: #3b78e7;
    animation: loading 3s linear 1s infinite;
  }
  .bar:nth-child(3) {
    background-color: #fdba2c;
    animation: loading 3s linear 2s infinite;
  }
  .payment-card {
    width: 100%;
    max-width: 355px;
    display: inline-block;
    padding-left: 10px;
    padding-right: 10px;
  }
  .payment-card .panel-body h4 a {
    position: relative;
  }
  .payment-card .panel-body h4 a:hover::after {
    border-color: #888;
  }
  .payment-card .panel-body h4 a::after {
    content: '';
    position: absolute;
    border: 1px solid #aaa;
    width: 100%;
    height: 1px;
    bottom: -4px;
    left: 0px;
  }
  .payment-card .panel {
    -webkit-box-shadow: 6px 6px 6px -6px rgba(0, 0, 0, 0.2);
    -moz-box-shadow: 6px 6px 6px -6px rgba(0, 0, 0, 0.2);
    box-shadow: 6px 6px 6px -6px rgba(0, 0, 0, 0.2);
  }
  .payment-card .panel:hover {
    -webkit-box-shadow: 6px 6px 6px -4px rgba(0, 0, 0, 0.2);
    -moz-box-shadow: 6px 6px 6px -4px rgba(0, 0, 0, 0.2);
    box-shadow: 6px 6px 6px -4px rgba(0, 0, 0, 0.2);
  }
  .payment-card .img-responsive {
    width: 100%;
  }
  @keyframes loading {
    from {
      left: 50%;
      width: 0;
      z-index: 100;
    }
    33.3333% {
      left: 0;
      width: 100%;
      z-index: 10;
    }
    to {
      left: 0;
      width: 100%;
    }
  }
  p {
    word-wrap: break-word !important;
  }
</style>
